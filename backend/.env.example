# Firebase Configuration
# Get these values from your Firebase Console -> Project Settings -> General -> Your Apps -> Web App
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Environment
# Options: development, production
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Security
# Generate these using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Database
# For local development
MONGODB_URI=mongodb://localhost:27017/urban-resolve
# For production (replace with your actual MongoDB URI)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/urban-resolve

# Optional: Email Configuration (if you implement email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# Optional: File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf